 <extension
       point="org.eclipse.mylyn.context.ui.startup">
    <startup
          class="com.springsource.sts.internal.ide.help.TutorialStartup">
    </startup>
 </extension>
    <extension
       point="com.springsource.sts.ide.ui.dashboard">
    <part
          class="com.springsource.sts.internal.ide.help.ExampleProjectsDashboardPart"
          id="com.springsource.sts.ide.help.dashboard.part.samples"
          page="com.springsource.sts.ide.ui.dashboard.page.overview"
          path="com.springsource.sts.ide.ui.dashboard.doc">
    </part>
 </extension>
    <extension
          point="com.springsource.sts.ide.ui.dashboard">
       <part
             class="com.springsource.sts.internal.ide.help.ExampleProjectsDashboardPart"
             id="com.springsource.sts.ide.help.dashboard.part.samples"
             page="com.springsource.sts.ide.ui.new.dashboard.page.overview"
             path="com.springsource.sts.ide.ui.dashboard.doc">
       </part>
    </extension>
   <extension
         point="com.springsource.sts.ide.ui.dashboard">
      <part
            class="com.springsource.sts.internal.ide.help.TutorialDashboardPart"
            id="com.springsource.sts.ide.help.dashboard.part.tutorials"
            page="com.springsource.sts.ide.ui.dashboard.page.overview"
            path="com.springsource.sts.ide.ui.dashboard.doc">
      </part>
   </extension>
   
   <extension
         point="com.springsource.sts.ide.ui.dashboard">
      <part
            class="com.springsource.sts.internal.ide.help.TutorialDashboardPart"
            id="com.springsource.sts.ide.help.dashboard.part.tutorials"
            page="com.springsource.sts.ide.ui.new.dashboard.page.overview"
            path="com.springsource.sts.ide.ui.dashboard.doc">
      </part>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.springframework.ide.eclipse.ui.preferencePage"
            class="com.springsource.sts.internal.ide.help.ExampleProjectsPreferencePage"
            id="com.springsource.sts.help.ui.examplepreferencepage"
            name="Example Projects">
      </page>
      <page
            category="org.springframework.ide.eclipse.ui.preferencePage"
            class="com.springsource.sts.internal.ide.help.TemplatesPreferencePage"
            id="com.springsource.sts.help.ui.templatepreferencepage"
            name="Template Projects">
      </page>
   </extension>
</plugin>
