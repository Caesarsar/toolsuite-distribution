	<extension point="org.eclipse.ui.popupMenus">
		<objectContribution
        id="com.springsource.sts.wizard.resource"
        nameFilter="*.xml"
        objectClass="org.eclipse.core.resources.IResource">
            <action
				class="com.springsource.sts.wizard.actions.CreateNewBeanDefAction"
				enablesFor="*" 
				icon="icons/full/etool16/newconfig_wiz.gif"
				id="com.springsource.sts.wizard.createNewBeanDef"
				label="New bean definition..."
				tooltip="Create new bean definition">
			</action>
		</objectContribution>
  		<objectContribution
        id="com.springsource.sts.wizard.resource"
        objectClass="org.springframework.ide.eclipse.beans.core.model.IBean">
            <action
                  class="com.springsource.sts.wizard.actions.ModifyBeanDefAction"
 	              enablesFor="*" 
                  icon="icons/full/etool16/newconfig_wiz.gif"
                  id="com.springsource.sts.wizard.modifyBeanDef"
                  label="Modify bean definition..."
                  tooltip="Modify bean definition">
            </action> 
        </objectContribution>
	</extension>
 <extension
       point="org.eclipse.ui.newWizards">
    <wizard
          category="com.springsource.sts.category"
          class="com.springsource.sts.wizard.template.TemplateWizard"
          finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
          hasPages="true"
          icon="icons/full/etool16/new_template_project_obj.png"
          id="com.springsource.sts.wizard.template"
          name="Spring Template Project"
          preferredPerspectives="org.eclipse.jdt.ui.JavaPerspective,org.eclipse.jdt.ui.JavaBrowsingPerspective,org.eclipse.jdt.ui.JavaHierarchyPerspective"
          project="true">
    </wizard>
    <wizard
          category="org.springframework.ide.eclipse.beans.ui.wizards.category"
          class="com.springsource.sts.wizard.ui.BeanWizard"
          icon="icons/full/obj16/bean_obj.gif"
          id="com.springsource.sts.wizard.bean"
          name="Spring Bean Definition">
    </wizard>
 </extension>
<extension
       point="org.eclipse.ui.navigator.navigatorContent">
    <navigatorContent
          activeByDefault="true"
          contentProvider="com.springsource.sts.wizard.dnd.SpringContentProvider"
          id="com.springsource.sts.wizard.navigatorContent"
          labelProvider="com.springsource.sts.wizard.dnd.SpringLabelProvider"
          name="Spring Content">
       <dropAssistant
             class="com.springsource.sts.wizard.dnd.BeanWizardDropAdapter"
             id="com.springsource.sts.wizard.beanWizardDropAdapter">
          <possibleDropTargets>
             <or>
                <instanceof
                      value="java.lang.Object">
                </instanceof>
             </or>
          </possibleDropTargets>
       </dropAssistant>
       <triggerPoints>
          <or>
             <instanceof
                   value="org.eclipse.jdt.core.ICompilationUnit">
             </instanceof>
             <instanceof
                   value="org.eclipse.jdt.core.IType">
             </instanceof></or>
       </triggerPoints>
    </navigatorContent>
 </extension>
 <extension
       point="org.eclipse.ui.navigator.viewer">
    <viewerContentBinding
          viewerId="org.springframework.ide.eclipse.ui.navigator.springExplorer">
       <includes>
          <contentExtension
                pattern="com.springsource.sts.wizard.navigatorContent">
          </contentExtension>
          <contentExtension
                pattern="java.lang.Object">
          </contentExtension>
       </includes>
    </viewerContentBinding>
 </extension>
 
 <extension
       point="org.eclipse.ui.perspectiveExtensions">
    <perspectiveExtension
          targetID="org.eclipse.jdt.ui.JavaPerspective">
       <newWizardShortcut
             id="com.springsource.sts.wizard.template">
       </newWizardShortcut>
    </perspectiveExtension>
    <perspectiveExtension
          targetID="org.eclipse.jst.j2ee.J2EEPerspective">
       <newWizardShortcut
             id="com.springsource.sts.wizard.template">
       </newWizardShortcut>
    </perspectiveExtension>
    <perspectiveExtension
          targetID="org.eclipse.jdt.ui.JavaBrowsingPerspective">
       <newWizardShortcut
             id="com.springsource.sts.wizard.template">
       </newWizardShortcut>
    </perspectiveExtension>
    <perspectiveExtension
          targetID="org.eclipse.jdt.ui.JavaHierarchyPerspective">
       <newWizardShortcut
             id="com.springsource.sts.wizard.template">
       </newWizardShortcut>
    </perspectiveExtension>
 </extension>
	
</plugin>
